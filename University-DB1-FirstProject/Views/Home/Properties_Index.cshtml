@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <title>Properties</title>
</head>
<body>
<div>
    <h2>List all properties</h2>
    <form>
        <p>
            <input type="hidden" name = "option" value = "0" />
            <input type="submit" value="List"/>
        </p>
    </form>
</div>
<div>
    <h2>List the users that can acces a property</h2>
    <form>
        <p>
            <input type="hidden" name = "option" value = "1" />
            Property Number: <input type="text" name="propertyNumber">
            <input type="submit" value="List"/>
        </p>
    </form>
</div>
<div>
    <h2>Inserts a new property</h2>
    <form>
        <p>
            <input type="hidden" name = "option" value = "2" />
            Property Number: <input type="text" name="propertyNumber">
            Address: <input type="text" name="address">
            Value: <input type="number" name="value">
            <input type="submit" value="Insert"/>
        </p>
    </form>
</div>
<div>
    <h2>Deletes a property</h2>
    <form>
        <p>
            <input type="hidden" name = "option" value = "3" />
            Property Number: <input type="text" name="propertyNumber">
            <input type="submit" value="Delete"/>
        </p>
    </form>
</div>
<div>
    <h2>Updates a property</h2>
    <form>
        <p>
            <input type="hidden" name = "option" value = "4" />
            Property Number: <input type="text" name="propertyNumber">
            Address: <input type="text" name="address">
            Value: <input type="number" name="value">
            New Property Number: <input type="text" name="newPropertyNumber">
            <input type="submit" value="Update"/>
        </p>
    </form>
</div>
</body>
</html>